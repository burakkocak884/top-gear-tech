<style>



</style>

<div class="app_whole">
<%= form_for (@appointment) do |f| %>


Select a <%= f.label :date %>
<%= f.date_field :date %></br><br>

 

<%= f.label :description %><br>
<%= f.text_area :description %></br>
<h2 class ="titles">Customer Information</h2>


<%= f.label :garage_id %>
<%= f.hidden_field :garage_id %>


 <%= f.label :customer_id %> (an existing customer)
<%= f.collection_select :customer_id, Customer.all, :id, :last_name, include_blank: "Select a Customer" %><br>

<%= f.fields_for :customer do |c| %>
<%= c.label :first_name %>
<%= c.text_field :first_name %>
<%= c.label :last_name %>
<%= c.text_field :last_name %>
<%= c.label :email %>
<%= c.text_field :email %>
<%= c.label :standing_balance %>
<%= c.number_field :standing_balance %>
<% end %></br>
<h2 class ="titles">Vehicle Information</h2>

<%= f.fields_for :vehicle do |v| %>
<%= v.label :year %>
<%= v.number_field :year %>
<%= v.label :make %>
<%= v.text_field :make%>
<%= v.label :model %>
<%= v.text_field :model %><br>
<%= v.label :mileage %>
<%= v.number_field :mileage %>
<%= v.label :license_plate %>
<%= v.text_field :license_plate %>
<%= v.label :color %>
<%= v.text_field :color %>
<%= v.label :customer_id %>
<%= v.hidden_field :customer_id %>
<% end %>






<%= f.submit  %>
<%end%>
</div>

