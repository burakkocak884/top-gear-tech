


<%= form_for(@appointment) do |f| %>


<%= f.label :date %>
<%= f.date_field :date %></br><br>

 

<%= f.label :description %>
<%= f.text_area :description %></br>


<%= f.label :garage_id %>

<%= f.collection_select :garage_id, Garage.all, :id, :name %><br>

<%= f.label :customer_id %>
<%= f.collection_select :customer_id, Customer.all, :id, :last_name %><br>






<%= f.submit "Create an Appointment" %>
<%end%>

